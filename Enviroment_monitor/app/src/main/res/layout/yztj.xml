<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_1">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_marginTop="5dp"
        android:layout_gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/deadline"
            android:textColor="#00FFFF"
            android:textSize="25sp"
            android:textStyle="bold">

        </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="阈值调节"
            android:textColor="#000000"
            android:textSize="25sp"
            android:textStyle="bold">

        </TextView>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="390dp"
        android:layout_height="70dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="50dp">

        <TextView
            android:id="@+id/text_tjpm"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="PM阈值："
            android:textSize="25sp"
            android:textColor="#000000"
            android:textStyle="bold">

        </TextView>
        <EditText
            android:id="@+id/tjpm"
            android:layout_width="120dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_height="50dp"
            android:layout_toEndOf="@+id/text_tjpm">
        </EditText>
        <Button
            android:id="@+id/btn_xiugai1"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:textStyle="bold"
            android:textSize="12dp"
            android:background="@drawable/admin_button_shape"
            android:text="确认修改"
            android:layout_marginLeft="15dp"
            android:layout_toEndOf="@id/tjpm"/>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="390dp"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="50dp">

        <TextView
            android:id="@+id/text_tjwd"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="温度阈值："
            android:textSize="25sp"
            android:textColor="#000000"
            android:textStyle="bold">

        </TextView>

        <EditText
            android:id="@+id/tjwd"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_marginStart="-2dp"
            android:layout_toEndOf="@+id/text_tjwd"
            android:gravity="center"
            android:textSize="25sp"
            android:textStyle="bold"></EditText>

        <Button
            android:id="@+id/btn_xiugai2"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:textStyle="bold"
            android:textSize="12dp"
            android:background="@drawable/admin_button_shape"
            android:text="确认修改"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@id/tjwd"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="390dp"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="50dp">

        <TextView
            android:id="@+id/text_tjsd"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="湿度阈值："
            android:textSize="25sp"
            android:textColor="#000000"
            android:textStyle="bold">

        </TextView>
        <EditText
            android:id="@+id/tjsd"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_toEndOf="@+id/text_tjsd">
        </EditText>
        <Button
            android:id="@+id/btn_xiugai3"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:textStyle="bold"
            android:textSize="12dp"
            android:background="@drawable/admin_button_shape"
            android:text="确认修改"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@id/tjsd"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_gravity="center">

        <Button
            android:id="@+id/control2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/admin_button_shape"
            android:text="控制界面" />
        <Button
            android:id="@+id/display2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="50dp"
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/admin_button_shape"
            android:text="显示界面" />

    </LinearLayout>


</LinearLayout>